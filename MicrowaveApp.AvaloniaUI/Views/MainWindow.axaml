<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:MicrowaveApp.AvaloniaUI.ViewModels"
    x:Class="MicrowaveApp.AvaloniaUI.Views.MainWindow"
    Title="Microondas App"
    Width="400"
    Height="300"
    WindowStartupLocation="CenterScreen"
    x:DataType="vm:MainWindowViewModel">

    <!-- <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext> -->

    <StackPanel Margin="20" Spacing="15">

        <!--  Status  -->
        <TextBlock
            FontSize="16"
            FontWeight="Bold"
            Text="{Binding Status}"
            TextAlignment="Center" />

        <!--  Controls  -->
        <StackPanel Spacing="10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Width="60" Text="Time:" />
                <Slider
                    Width="150"
                    Maximum="300"
                    Minimum="10"
                    Value="{Binding Time}" />
                <TextBlock Text="{Binding Time}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Width="60" Text="Power:" />
                <Slider
                    Width="150"
                    Maximum="100"
                    Minimum="10"
                    Value="{Binding Power}" />
                <TextBlock Text="{Binding Power}" />
            </StackPanel>
        </StackPanel>

        <!--  Buttons  -->
        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                Background="Green"
                Command="{Binding StartCommand}"
                Content="Start" />
            <Button
                Background="Red"
                Command="{Binding StopCommand}"
                Content="Stop" />
            <Button Command="{Binding StatusCommand}" Content="Status" />
        </StackPanel>

    </StackPanel>
</Window>
