<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:MicrowaveApp.AvaloniaUI.ViewModels"
    x:Class="MicrowaveApp.AvaloniaUI.Views.MainWindow"
    Title="Microondas App"
    Width="800"
    Height="400"
    WindowStartupLocation="CenterScreen"
    x:DataType="vm:MainWindowViewModel">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Inputs  -->
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Spacing="10">
            <TextBlock VerticalAlignment="Center" Text="Time (s):" />
            <TextBox Width="60" Text="{Binding Time}" />
            <TextBlock VerticalAlignment="Center" Text="Potência:" />
            <TextBox Width="40" Text="{Binding Power}" />
            <Button Command="{Binding QuickStartCommand}" Content="Início Rápido" />
            <Button Command="{Binding StartCommand}" Content="Iniciar" />
            <Button Command="{Binding PauseCancelCommand}" Content="Parar/Cancelar" />
        </StackPanel>

        <!--  Heating Progress  -->
        <TextBlock
            Grid.Row="1"
            Margin="10,10,10,10"
            FontFamily="Consolas"
            Text="{Binding HeatingProgress}" />

        <!--  Programs List  -->
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            Spacing="10">
            <TextBlock VerticalAlignment="Center" Text="Programa:" />
            <ComboBox
                Width="200"
                ItemsSource="{Binding Programs}"
                SelectedItem="{Binding SelectedProgram}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}">
                            <TextBlock.FontStyle>
                                <MultiBinding Converter="{StaticResource ProgramItalicConverter}">
                                    <Binding Path="IsPredefined" />
                                </MultiBinding>
                            </TextBlock.FontStyle>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Margin="10,0,0,0" Text="{Binding SelectedProgramInstructions}" />
        </StackPanel>

        <!--  Custom Program Form  -->
        <StackPanel Grid.Row="3" Margin="0,20,0,0" Spacing="5">
            <TextBlock FontWeight="Bold" Text="Registrar programa personalizado:" />
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBox
                    Width="100"
                    Text="{Binding CustomName}"
                    Watermark="Nome" />
                <TextBox
                    Width="100"
                    Text="{Binding CustomFood}"
                    Watermark="Comida" />
                <TextBox
                    Width="60"
                    Text="{Binding CustomTime}"
                    Watermark="Tempo(s)" />
                <TextBox
                    Width="40"
                    Text="{Binding CustomPower}"
                    Watermark="Potência" />
                <TextBox
                    Width="40"
                    Text="{Binding CustomChar}"
                    Watermark="Char" />
                <TextBox
                    Width="200"
                    Text="{Binding CustomInstructions}"
                    Watermark="Instruções" />
                <Button Command="{Binding AddCustomProgramCommand}" Content="Adicionar" />
            </StackPanel>
        </StackPanel>

        <!--  Authentication Status  -->
        <TextBlock
            Grid.Row="4"
            Margin="0,10,0,0"
            Foreground="Red"
            Text="{Binding AuthStatus}" />
    </Grid>
</Window>
